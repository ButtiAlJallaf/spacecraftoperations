<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RoverTelemetry">

    <TextView
        android:id="@+id/lblHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Subscriptions"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblAcknowledge"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Acknowledge:" />

        <ToggleButton
            android:id="@+id/ack.msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Sub"
            android:textOn="Unsub" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Battery I:" />

        <ToggleButton
            android:id="@+id/power_telemetry.battery_I"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Sub"
            android:textOn="Unsub" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblBatteryV"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Battery V:" />

        <ToggleButton
            android:id="@+id/power_telemetry.battery_V"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Sub"
            android:textOn="Unsub" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblMotorRF"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Motor RF:" />

        <ToggleButton
            android:id="@+id/power_telemetry.motor_rf_I"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Sub"
            android:textOn="Unsub" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblNewMotorRF"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Motor RR:" />

        <ToggleButton
            android:id="@+id/power_telemetry.motor_rr_I"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Sub"
            android:textOn="Unsub" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Motor LF:" />

        <ToggleButton
            android:id="@+id/power_telemetry.motor_lf_I"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Sub"
            android:textOn="Unsub" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblMotorLR"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Motor LR:" />

        <ToggleButton
            android:id="@+id/power_telemetry.motor_lr_I"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Sub"
            android:textOn="Unsub" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:itemBackground="@color/lightblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>