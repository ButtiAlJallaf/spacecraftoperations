<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundcolor"
    tools:context=".RoverTelemetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/lblHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Subscriptions"
            android:textColor="?attr/textcolor"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="?attr/textcolor"
            android:layout_marginTop="20dp"
            android:weightSum="5"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/lblAcknowledge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Acknowledge Message:"
                android:textColor="?attr/textcolor"
                android:layout_weight="3"/>

            <ToggleButton
                android:id="@+id/ack.msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/sub_button_colors"
                android:text="ToggleButton"
                android:textColor="?attr/sub_buttontextcolor"
                android:textOff="+"
                android:textOn="-"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="5"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Rover Battery (I):"
                android:textColor="?attr/textcolor"
                android:layout_weight="3"/>

            <ToggleButton
                android:id="@+id/power_telemetry.battery_I"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:textOff="+"
                android:textOn="-"
                android:textColor="?attr/sub_buttontextcolor"
                android:background="@drawable/sub_button_colors"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="5"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/lblBatteryV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Rover Battery (V):"
                android:textColor="?attr/textcolor"
                android:layout_weight="3" />

            <ToggleButton
                android:id="@+id/power_telemetry.battery_V"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:textOff="+"
                android:textOn="-"
                android:textColor="?attr/sub_buttontextcolor"
                android:background="@drawable/sub_button_colors"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="5"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/lblMotorRF"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Motor Front Right (RF):"
                android:textColor="?attr/textcolor"
                android:layout_weight="3"/>

            <ToggleButton
                android:id="@+id/power_telemetry.motor_rf_I"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:textOff="+"
                android:textOn="-"
                android:textColor="?attr/sub_buttontextcolor"
                android:background="@drawable/sub_button_colors"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="5"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/lblNewMotorRF"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Motor Right Rear (RR):"
                android:textColor="?attr/textcolor"
                android:layout_weight="3"/>

            <ToggleButton
                android:id="@+id/power_telemetry.motor_rr_I"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:textOff="+"
                android:textOn="-"
                android:textColor="?attr/sub_buttontextcolor"
                android:background="@drawable/sub_button_colors"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="5"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Motor Front Left (LF):"
                android:textColor="?attr/textcolor"
                android:layout_weight="3"/>

            <ToggleButton
                android:id="@+id/power_telemetry.motor_lf_I"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:textOff="+"
                android:textOn="-"
                android:textColor="?attr/sub_buttontextcolor"
                android:background="@drawable/sub_button_colors"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="5"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/lblMotorLR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Motor Left Rear (LR):"
                android:textColor="?attr/textcolor"
                android:layout_weight="3"/>

            <ToggleButton
                android:id="@+id/power_telemetry.motor_lr_I"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:textOff="+"
                android:textOn="-"
                android:textColor="?attr/sub_buttontextcolor"
                android:background="@drawable/sub_button_colors"
                android:layout_weight="2"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="?attr/nav_backgroundcolor"
        app:itemIconTint="@drawable/bottom_navigation_colors"
        app:itemTextColor="@drawable/bottom_navigation_colors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>